<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shalom.app2"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <android:users-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:users-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:users-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name=".MyBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.shalom.app2.A_CUSTOM_INTENT"></action>
            </intent-filter>
            <intent-filter>
                <action    android:name="android.intent.action.TIME_SET">
                </action>
            </intent-filter>
            <intent-filter>
                <action
                    android:name="android.intent.action.BOOT_COMPLETED">
                </action>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.TIME_TICK" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".controller.Main"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>